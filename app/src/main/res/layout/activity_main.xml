<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar" />


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.app.FragmentTabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tool_bar"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="#282727"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl">

                </TabWidget>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#282727"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <Button
                        android:id="@+id/select_room"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/info_header_1"
                        android:text="انتخاب سردخانه"
                        android:textColor="#ffffff"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/updateBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/info_header_2"
                        android:text="بروز رسانی"
                        android:textColor="#ffffff"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.6"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/coolroomView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/info_header_2"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="4dp"
                                    android:text="محمد حسین"
                                    android:textColor="#ffffff"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/namefamily"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_home"
                                    android:tint="#fff" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/timer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="4dp"
                                        android:text="--:--"
                                        android:textColor="#ffffff"
                                        android:textSize="12sp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="right"
                                        app:srcCompat="@drawable/ic_access_time_black_24dp"
                                        android:tint="#fff" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="4dp"
                                        android:text="--/--/--"
                                        android:textColor="#ffffff"
                                        android:textSize="12sp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:srcCompat="@drawable/ic_date_range_black_24dp"
                                        android:tint="#fff" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <!--here-->

                </LinearLayout>


                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.90">

                </FrameLayout>


                <LinearLayout
                    android:id="@+id/btn_data"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="#62a949"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:textColor="#ffffff"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="ذخیره اطلاعات و ارسال به سرور"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_check_green_24dp"
                        android:textColor="#000000" />

                </LinearLayout>
            </LinearLayout>


        </android.support.v4.app.FragmentTabHost>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="280dp"
            android:background="#eee"
            android:layout_gravity="right"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listView"
                android:layout_width="280dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#eee"
                app:headerLayout="@layout/nav_header_main" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:padding="12dp"
                android:gravity="center"
                android:textColor="#ff3c49"
                android:textColorLink="#7c7c7c"
                android:drawablePadding="6dp"
                android:text="Farsibase.com" />

        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>


</LinearLayout>