<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.coolroom2.Activity.SettingActivity">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="#363636"
        android:background="#dadada"
        android:text="تنظیمات"
        android:elevation="7dp"
        android:textSize="20dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/settingPatternActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/list_item_foreground"
            android:gravity="right|center_vertical"
            android:paddingBottom="6dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="@string/settingPattern"
            android:textColor="#363636"
            android:textSize="20dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/settingOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/list_item_foreground"
            android:gravity="right|center_vertical"
            android:paddingBottom="6dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="@string/settingBrightness"
            android:textColor="#363636"
            android:textSize="20dp"
            android:visibility="visible" />
    </LinearLayout>



</RelativeLayout>
