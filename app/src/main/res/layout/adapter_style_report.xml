<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reportTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:drawablePadding="9dp"
            android:drawableRight="@drawable/ic_access_time_black_24dp"
            android:gravity="right|center_vertical"
            android:text="--:--" />

        <TextView
            android:id="@+id/reportDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:drawablePadding="9dp"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:gravity="right|center_vertical"
            android:text="تاریخ" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/coolroomNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:drawablePadding="9dp"
            android:drawableRight="@drawable/ic_ac_unit_black_24dp"
            android:gravity="right|center_vertical"
            android:text="room number" />

        <TextView
            android:id="@+id/coolroomName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:drawablePadding="9dp"
            android:drawableRight="@drawable/ic_description"
            android:gravity="right|center_vertical"
            android:text="نام سردخانه" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">





        <TextView
            android:id="@+id/reportState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:drawablePadding="9dp"
            android:gravity="right|center_vertical"
            android:text="report state" />

        <TextView
            android:id="@+id/reportFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:drawablePadding="9dp"
            android:gravity="right|center_vertical"
            android:text="report from" />

    </LinearLayout>

    <TextView
        android:id="@+id/reportType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:drawablePadding="9dp"
        android:gravity="right|center_vertical"
        android:text="report type" />


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/listDivider" />


</LinearLayout>
