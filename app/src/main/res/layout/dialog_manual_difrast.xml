<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minWidth="350dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#004299"
            android:elevation="12dp"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="زمان دیفراست دستی را انتخاب کنید"
                android:textColor="#fff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_box_header"
                android:gravity="center"
                android:padding="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمان تاخیر استارت دیفراست"
                    android:textAppearance="@style/TextAppearance.FontPathView.Text"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/timer_tv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.FontPathView"
                        android:textColor="#000"
                        android:textSize="50dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|center"
                        android:text="Minute"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:textColor="#2d96e6">

                    <ImageView
                        android:id="@+id/second_inc"
                        android:layout_width="42dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_expand_less_black_24dp"
                        android:foreground="@drawable/ripple_orange" />

                    <ImageView
                        android:id="@+id/second_dec"
                        android:layout_width="42dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_expand_more_black_24dp"
                        android:foreground="@drawable/ripple_orange" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="8dp">


            <LinearLayout
                android:id="@+id/save_difrast"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginRight="6dp"
                android:layout_weight="0.5"
                android:background="#0261df"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:textColor="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="ارسال"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:tint="#fff"
                    app:srcCompat="@drawable/ic_done_black_24dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/close_difrast"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="0.5"
                android:background="#ce3737"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:textColor="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="لغو"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:tint="#fff"
                    app:srcCompat="@drawable/ic_close_black_24dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
