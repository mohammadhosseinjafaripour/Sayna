<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:minWidth="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="match_parent">

    <TextView
        android:text=" هیچ سرد خانه یافت نشد!"
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:text="برای اضافه کردن کاربر حداقل یک سرد خانه باید معرفی شده باشد."
        android:layout_width="match_parent"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/addRoomBtn"
        android:padding="12dp"
        android:text="اضافه کردن سردخانه"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/ic_add_box_black_24dp"
        android:gravity="center_vertical|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="باشه"
        android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>