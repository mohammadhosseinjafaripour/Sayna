<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#004299"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جستجو بر اساس"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:text="توضیحات" />

                        <CheckBox
                            android:id="@+id/number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:text="شماره" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:text="نام سردخانه" />


                        <CheckBox
                            android:id="@+id/province"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:text="شهر" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:padding="8dp">


            <LinearLayout
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginRight="6dp"
                android:layout_weight="0.5"
                android:background="@drawable/info_header"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:textColor="#fff">

                <TextView
                    android:id="@+id/posetive_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="تایید"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    app:srcCompat="@drawable/ic_done_black_24dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="0.5"
                android:background="@drawable/info_header"
                android:backgroundTint="#ce3737"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"

                android:textColor="#fff">

                <TextView
                    android:id="@+id/negative_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="لغو"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#000"
                    android:tint="#fff"
                    app:srcCompat="@drawable/ic_close_black_24dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
