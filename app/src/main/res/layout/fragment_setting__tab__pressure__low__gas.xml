<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="ir.coolroom2.Fragment.Setting.Setting_Tab_Pressure_High_Gas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/info_box"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="6dp">

                <RadioGroup
                    android:id="@+id/pressure_v1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pressure_v1_automatic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:layout_weight="0.5"
                        android:button="@null"
                        android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                        android:text="اتوماتیک"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/pressure_v1_manual"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:button="@null"
                        android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                        android:text="دستی"
                        android:textColor="#000" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/info_box_header_right"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ریست"
                    android:textAppearance="@style/TextAppearance.FontPathView.Text"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/info_box"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pressure_v2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.FontPathView"
                            android:textColor="#000"
                            android:textSize="34dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="left"
                            android:text="PSI"
                            android:textAppearance="@style/TextAppearance.FontPathView2"
                            android:textColor="#686868"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:textColor="#2d96e6">

                        <Button
                            android:id="@+id/pressure_v2_down"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_expand_more_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                        <Button
                            android:id="@+id/pressure_v2_up"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/ic_expand_less_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/info_box_header_right"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="تنظیم قطع فشار گاز پایین"
                    android:textAppearance="@style/TextAppearance.FontPathView.Text"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/info_box"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pressure_v3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.FontPathView"
                            android:textColor="#000"
                            android:textSize="34dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="left"
                            android:text="PSI"
                            android:textAppearance="@style/TextAppearance.FontPathView2"
                            android:textColor="#686868"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:textColor="#2d96e6">

                        <Button
                            android:id="@+id/pressure_v3_down"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_expand_more_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                        <Button
                            android:id="@+id/pressure_v3_up"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/ic_expand_less_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/info_box_header_right"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="حد بالا و پایین فشار گاز پایین"
                    android:textAppearance="@style/TextAppearance.FontPathView.Text"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delay_on_connect_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/info_box"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pressure_v4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:textColor="#000"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.FontPathView"
                            android:textSize="34dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="left"
                            android:text="S"
                            android:textAppearance="@style/TextAppearance.FontPathView2"
                            android:textColor="#686868"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:textColor="#2d96e6">

                        <Button
                            android:id="@+id/pressure_v4_down"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:background="@drawable/ic_expand_more_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                        <Button
                            android:id="@+id/pressure_v4_up"
                            android:layout_width="42dp"
                            android:clickable="false"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/ic_expand_less_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_right2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/info_box_header_right"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/delay_on_connect_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمان تاخیر در وصل"
                    android:textAppearance="@style/TextAppearance.FontPathView.Text"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/info_box"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pressure_v5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.FontPathView"
                            android:textColor="#000"
                            android:textSize="34dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="left"
                            android:text="S"
                            android:textAppearance="@style/TextAppearance.FontPathView2"
                            android:textColor="#686868"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:textColor="#2d96e6">

                        <Button
                            android:id="@+id/pressure_v5_down"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_expand_more_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                        <Button
                            android:id="@+id/pressure_v5_up"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/ic_expand_less_black_24dp"
                            android:foreground="@drawable/ripple_orange" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/info_box_header_right"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمان تاخیر در قطع"
                    android:textAppearance="@style/TextAppearance.FontPathView.Text"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/manual_lowgas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/gradient"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="ریست خطای فشار گاز پایین"
            android:textColor="#000"
            android:textSize="17dp" />

    </LinearLayout>

</ScrollView>
