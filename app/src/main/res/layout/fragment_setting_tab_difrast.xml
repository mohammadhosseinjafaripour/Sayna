<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_timer_defrost_min" />

                        <ir.coolroom2.ArcRound
                            android:id="@+id/defrost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp" />

                        <TextView
                            android:id="@+id/textClock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="76dp"
                            android:text="00:00"
                            android:textAppearance="@style/TextAppearance.FontPathView"
                            android:textSize="30dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.30"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/info_box"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.20"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/down"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/ic_expand_more_black_24dp"
                                    android:foreground="@drawable/ripple_orange"
                                    android:rotation="90" />


                                <TextView
                                    android:id="@+id/saat"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textAppearance="@style/TextAppearance.FontPathView"
                                    android:textSize="25sp" />


                                <Button
                                    android:id="@+id/up"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/ic_expand_less_black_24dp"
                                    android:foreground="@drawable/ripple_orange"
                                    android:rotation="90" />


                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <ToggleButton
                                android:id="@+id/one"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ix_togle_horizenral"
                                android:enabled="true"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <ToggleButton
                                android:id="@+id/two"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ix_togle_horizenral"
                                android:enabled="true"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">


                            <ToggleButton
                                android:id="@+id/three"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ix_togle_horizenral"
                                android:enabled="true"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <ToggleButton
                                android:id="@+id/four"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ix_togle_horizenral"
                                android:enabled="true"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <ToggleButton
                                android:id="@+id/five"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ix_togle_horizenral"
                                android:enabled="true"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <ToggleButton
                                android:id="@+id/six"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ix_togle_horizenral"
                                android:enabled="true"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/info_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_box_header"
                        android:gravity="center"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تایمر تاخیر در وصل بعد از دیفراست"
                            android:textAppearance="@style/TextAppearance.FontPathView.Text"
                            android:textColor="#fff"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.85"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/defrost_v2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:text="0"
                                android:textAppearance="@style/TextAppearance.FontPathView"
                                android:textColor="#000"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:gravity="left|center_vertical"
                                android:text="Second"
                                android:textColor="#949494"
                                android:textSize="14dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:textColor="#2d96e6">


                            <Button
                                android:id="@+id/defrost_v2_down"
                                android:layout_width="42dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:background="@drawable/ic_expand_more_black_24dp"
                                android:foreground="@drawable/ripple_orange" />

                            <Button
                                android:id="@+id/defrost_v2_up"
                                android:layout_width="42dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:background="@drawable/ic_expand_less_black_24dp"
                                android:foreground="@drawable/ripple_orange" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/manual_difrast"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/gradient"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="دیفراست دستی"
                    android:textColor="#000"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/info_box"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <RadioGroup
                        android:id="@+id/termodisk_v1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/termodisk_v1_off"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                            android:text="خاموش"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/termodisk_v1_on"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:button="@null"
                            android:checked="true"
                            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                            android:text="روشن"
                            android:textColor="#000" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/info_box_header_right"
                    android:gravity="center"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ترمودیسک"
                        android:textAppearance="@style/TextAppearance.FontPathView.Text"
                        android:textColor="#fff"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pomp_down_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/infobox_disable"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/termodisk_v2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:text="0"
                                android:textAppearance="@style/TextAppearance.FontPathView"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="34dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:gravity="left"
                                android:text="PSI"
                                android:textAppearance="@style/TextAppearance.FontPathView2"
                                android:textColor="#686868"
                                android:textSize="25dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:textColor="#2d96e6">

                            <Button
                                android:id="@+id/termodisk_v2_down"
                                android:layout_width="42dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_expand_more_gray_24dp"
                                android:clickable="false"
                                android:foreground="@drawable/ripple_orange" />

                            <Button
                                android:id="@+id/termodisk_v2_up"
                                android:layout_width="42dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6dp"
                                android:background="@drawable/ic_expand_less_gray_24dp"
                                android:clickable="false"
                                android:foreground="@drawable/ripple_orange" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/forground_gray"
                    android:gravity="center"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/pomp_down_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تنظیم دمای ترمودیسک"
                        android:textAppearance="@style/TextAppearance.FontPathView.Text"
                        android:textColor="#fff"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>