<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="horizontal"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/info_box"
                android:orientation="vertical"
                android:padding="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_box_header"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="تعداد فاز"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/information_voltage_v7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/img_icon_voltage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.425"
            android:background="@drawable/info_box"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_box_header"
                android:gravity="center"
                android:padding="4dp"
                android:text="اختلاف فازها نسبت به\n نول"
                android:textColor="#fff"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/info_box_header_gradiant"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="RN"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/information_voltage_v4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="380"
                    android:textAppearance="@style/TextAppearance.FontPathView"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center_vertical"
                    android:text="V"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/info_box_header_gradiant"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="SN"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/information_voltage_v5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="380"
                    android:textAppearance="@style/TextAppearance.FontPathView"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center_vertical"
                    android:text="V"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/info_box_header_gradiant_rounded"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="TN"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/information_voltage_v6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="380"
                    android:textAppearance="@style/TextAppearance.FontPathView"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center_vertical"
                    android:text="V"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.425"
            android:background="@drawable/info_box"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_box_header"
                android:gravity="center"
                android:padding="4dp"
                android:text="اختلاف فازها نسبت به\n یکدیگر"
                android:textColor="#fff"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/info_box_header_gradiant"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="RS"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/information_voltage_v1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="380"
                    android:textAppearance="@style/TextAppearance.FontPathView"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center_vertical"
                    android:text="V"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/info_box_header_gradiant"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="RT"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/information_voltage_v2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="380"
                    android:textAppearance="@style/TextAppearance.FontPathView"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center_vertical"
                    android:text="V"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/info_box_header_gradiant_rounded"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="ST"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/information_voltage_v3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="380"
                    android:textAppearance="@style/TextAppearance.FontPathView"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center_vertical"
                    android:text="V"
                    android:textAppearance="@style/TextAppearance.FontPathView2"
                    android:textColor="#000" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>